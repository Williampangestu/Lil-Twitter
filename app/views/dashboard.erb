<div id="sidebar">
	<%= session[:username] %>
	<br>
	tweets: <%= @user.tweets.count %>
	following: <%= @user.followees.count %>
	followers: <%= @user.followers.count %>

</div>
<%= erb :search_bar, locals: {location: 'dashboard'} %>
<form name="input" action="/profile_page" method="get">
	<input type="submit" value="Go to Profile Page">
</form>
<div id="tweets">
<% @tweets.each do |tweet| %>
	<div class="tweet_display">
		<%= tweet.content %>
		<div class="tweet_author">
			<%= tweet.user %>
		</div>
		<div class="tweet_date">
			<%= tweet.created_at %>
		</div>
	</div>
<% end %>
</div>
