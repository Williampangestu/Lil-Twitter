<div id="sidebar">
	<%= session[:username] %>
	<br>
	tweets: <%= @user.tweets.count %>
	following: <%= @user.followees.count %>
	followers: <%= @user.followers.count %>

</div>

<div id="tweets">
<% @tweets.each do |tweet| %>
	<div class="tweet_display">
		<%= tweet.content %>
		<div class="tweet_author">
			<%= tweet.user %>
		</div>
		<div class="tweet_date">
			<%= tweet.created_at %>
		</div>
	</div>
<% end %>
</div>
